<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_secondary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fleanegan.interactiveapp.Secondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="16dp"
            android:text="opinion:"
            android:textAllCaps="true"
            android:textColor="#000" />

        <Button
            android:id="@+id/edit_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_margin="16dp"
            android:background="#ECEFF1"
            android:text="edit" />

        <Button
            android:id="@+id/clear_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_margin="16dp"
            android:background="#ECEFF1"
            android:text="clear" />

    </LinearLayout>


    <EditText
        android:id="@+id/text_to_debug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:backgroundTint="@color/background"
        android:gravity="start"
        android:inputType="textMultiLine"

        android:textColor="@color/colorText_greyed_out"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_finish_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ECEFF1"
            android:text="submit" />


    </LinearLayout>

</LinearLayout>
